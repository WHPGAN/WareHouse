@{
    ViewData["Title"] = "区域管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <button id="add-btn" class="btn btn-cyan">添加区域</button>
    <table class="table table-striped table-hover" id="region-table">
    </table>
</div>

@section Scripts
{
    <script>
        $.ajax({
            url: '/Region/GetAll',
            data: {},
            type: "get",
            success: function(res) {
                console.log(res);
            }
        });
        $('#region-table').bootstrapTable({
            method: 'get',
            url: "/Region/GetAll", //请求路径
            striped: true, //是否显示行间隔色
            pageNumber: 1, //初始化加载第一页
            pagination: true, //是否分页
            sidePagination: 'client', //server:服务器端分页|client：前端分页
            pageSize: 5, //单页记录数
            pageList: [5, 10, 20, 30], //可选择单页记录数
            showRefresh: true, //刷新按钮
            columns: [
                {
                    field: "id",
                    title: "主键"
                }, {
                    field: "name",
                    title: "区域名称"
                }, {
                    field: "id",
                    title: "操作",
                    formatter: function(value, row, index) {
                        var html = '';
                        html += "<button class='btn btn-default' onclick='edit(" + value + ")'>修改</button>";
                        html += "<button class='btn btn-default' onclick='del(" + value + ")'>删除</button>";
                        return html;
                    }
                }
            ]
        });

        $("#add-btn").click(function () {
            window.location.href = "@Url.Action("Create")";
        });
        function edit(id) {
            window.location.href = "@Url.Action("Update")?id="+id;
        }
        function del(id) {
            $.post({
                url: '/Region/DeleteRegion',
                data: {
                    id:id
                },
                success: function (res) {
                    $.message(res.message);
                    setTimeout(function() {
                        window.location.href = "@Url.Action("Index")";
                    },1000);
                }
            });
        }
    </script>
}