@{
    ViewData["Title"] = "修改密码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <input type="hidden" name="name" id="name" value="@ViewData["msg"]" />
                    <div class="form-group">
                        <label for="old-password">旧密码</label>
                        <input type="password" class="form-control" name="old-password" id="old-password" placeholder="输入账号的原登录密码">
                    </div>
                    <div class="form-group">
                        <label for="new-password">新密码</label>
                        <input type="password" class="form-control" name="new-password" id="new-password" placeholder="输入新的密码">
                    </div>
                    <div class="form-group">
                        <label for="confirm-password">确认新密码</label>
                        <input type="password" class="form-control" name="confirm-password" id="confirm-password" placeholder="请再次输入新的密码">
                    </div>
                    <button id="update-btn" class="btn btn-primary">修改密码</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $("#update-btn").click(function () {
            var data = {
                name: $("#name").val(),
                oldPwd: $("#old-password").val(),
                newPwd: $("#new-password").val()
            }
            if (data.newPwd !== $("#confirm-password").val()) {
                $.error("两次输入的新密码不一致，请重新输入");
            } else {
                $.ajax({
                    url: "/Home/UpdatePwd",
                    data: data,
                    type: "post",
                    success: function (res) {
                        $.message(res.message);
                    },
                    error: function (res) {
                        console.log(res);
                    }
                });
            }
        });
    </script>
}